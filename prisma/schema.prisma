generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/main.sqlite"
}

enum Country {
  us
  fr
}

enum Language {
  en
  fr
}

enum Category {
  POLITICS
  TECHNOLOGY
  SCIENCE
  HEALTH
  ENTERTAINMENT
  SPORTS
  BUSINESS
  WORLD
}

model Article {
  id         String    @id @default(uuid())
  headline   String
  article    String
  summary    String
  category   Category
  isFake     Boolean
  fakeReason String?
  country    Country
  language   Language
  createdAt  DateTime  @default(now())

  @@index([language, country])
  @@index([createdAt])
}

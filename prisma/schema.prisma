generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Country {
  us
  fr
}

enum Language {
  en
  fr
}

enum Category {
  POLITICS
  TECHNOLOGY
  SCIENCE
  HEALTH
  ENTERTAINMENT
  SPORTS
  BUSINESS
  WORLD
  OTHER
}

enum Stance {
  supportive
  critical
  neutral
  mixed
  concerned
  optimistic
  skeptical
}

enum DiscourseType {
  mainstream
  alternative
  underreported
  dubious
}

model Story {
  id       String   @id @default(uuid())
  title    String
  category Category

  // Geographic and temporal context
  countries Json
  dateline  DateTime

  // Sources
  sourceReferences Json

  // Relations
  perspectives Perspective[]

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([dateline])
  @@index([createdAt])
}

model Perspective {
  id             String @id @default(uuid())
  holisticDigest String

  // Relations
  story   Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)
  storyId String

  tags PerspectiveTag?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storyId])
}

model PerspectiveTag {
  id            String         @id @default(uuid())
  stance        Stance?
  discourseType DiscourseType?

  // Relations
  perspective   Perspective @relation(fields: [perspectiveId], references: [id], onDelete: Cascade)
  perspectiveId String      @unique

  @@index([stance])
  @@index([discourseType])
}

model Article {
  id         String   @id @default(uuid())
  headline   String
  article    String
  summary    String
  category   Category
  isFake     Boolean
  fakeReason String?
  country    Country
  language   Language
  createdAt  DateTime @default(now())

  @@index([language, country])
  @@index([createdAt])
}
